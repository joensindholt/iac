{
  "$schema": "./../../.nx/installation/node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "{projectRoot}",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mkdir -p dist/module1",
          "cp -r {projectRoot}/src dist/module1"
        ]
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}/terraform",
        "commands": [
          "terraform init",
          "terraform workspace select --or-create {args.environment}",
          "terraform apply -y"
        ]
      }
    }
  },
  "tags": []
}